{
  "name": "pytest",
  "viewName": "Pytest",
  "version": "1.0.1",
  "type": "executer",
  "execProgram": "node",
  "imgUrl": "logo.png",
  "main": "app.js",
  "description": "Python software testing framework",
  "category": "Testing",
  "keywords": [
    "testing",
    "pytest",
    "python",
    "test",
    "cli",
    "pip"
  ],
  "methods": [
    {
      "name": "runCommand",
      "viewName": "Run pytest Command",
      "params": [
        {
          "name": "workingDirectory",
          "viewName": "Working Directory",
          "type": "string",
          "description": "Path to a directory on the Kaholo agent which contains one or more pytest files (test_*.py or *_test.py)",
          "placeholder": "tests/pytest001",
          "required": false
        },
        {
          "name": "command",
          "viewName": "Command",
          "type": "string",
          "description": "pytest command",
          "placeholder": "pytest -s --mode quick --estimate",
          "default": "pytest",
          "required": true
        },
        {
          "name": "jsonReport",
          "viewName": "JSON Report",
          "type": "options",
          "description": "Optionally create JSON report (\".report.json\" in Working Directory)",
          "placeholder": "None",
          "default": "none",
          "options": [
            {
              "id": "none",
              "name": "None"
            },
            {
              "id": "summary",
              "name": "Summary"
            },
            {
              "id": "full",
              "name": "Full Report"
            }
          ]
        },
        {
          "name": "altImage",
          "viewName": "Alternative Docker Image",
          "type": "string",
          "description": "repo:tag for an alternative python image to use",
          "placeholder": "python:3.7.14",
          "required": false
        }
      ]
    }
  ]
}
